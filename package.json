{
  "name": "portal-class",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --port 4000",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "start": "serve dist -s -n -L -p $PORT",
    "preview": "vite preview",
    "prepare": "husky",
    "commit": "commit",
    "lint:fix": "pnpm eslint:fix && pnpm stylelint:fix && pnpm prettier:fix",
    "check-types": "tsc --noemit",
    "eslint": "eslint --cache --ext .ts,.tsx,.js,.jsx src/ --ignore-path .gitignore .",
    "eslint:fix": "pnpm eslint --fix",
    "stylelint": "stylelint --cache src/**/*.css",
    "stylelint:fix": "pnpm stylelint --fix",
    "prettier:check": "prettier --no-error-on-unmatched-pattern --check '**/*.ts' '**/*.tsx' '**/*.js' '**/*.jsx'",
    "prettier:fix": "prettier --no-error-on-unmatched-pattern --write '**/*.ts' '**/*.tsx' '**/*.js' '**/*.jsx'"
  },
  "dependencies": {
    "i18next": "^23.10.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.1.0",
    "serve": "^14.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@commitlint/prompt-cli": "^19.2.0",
    "@commitlint/types": "^19.0.3",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@unocss/postcss": "^0.59.4",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-unicorn": "^51.0.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.38",
    "prettier": "3.2.5",
    "stylelint": "^14.7.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recommended": "^7.0.0",
    "typescript": "^5.2.2",
    "unocss": "^0.59.4",
    "vite": "^5.2.0",
    "vite-plugin-i18next-loader": "^2.0.12"
  }
}
